<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid
            android:color="@color/white"/>
        <size
            android:height="30dp"/>
        <stroke
            android:color="#EF456A"
            android:width="5dp"/>
        <corners
            android:radius="20dp"/>
    </shape>
</item>
<item>
    <scale android:scaleWidth="100%">
        <selector>
            <item android:state_enabled="false"
                android:drawable="@drawable/colorr"/>
                <item>
                    <shape android:shape="rectangle">
                        <solid
                            android:color="#F47792"/>
                        <size
                            android:height="25dp"/>
                        <corners
                            android:radius="20dp"/>
                    </shape>
                </item>
        </selector>
    </scale>
</item>
</layer-list>