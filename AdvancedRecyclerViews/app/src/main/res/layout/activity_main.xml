<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pastel_rainbow">

    <TextView
        android:id="@+id/header"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RECYCLER VIEWS"
        android:textColor="#83428E"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:orientation="vertical"
        android:weightSum="6"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/normal"
            android:text="Normal"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_main"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="With CardView"
            android:id="@+id/cardview"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_main"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Single Item selection"
            android:id="@+id/single"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="3dp"
            android:background="@drawable/button_main"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="multiple view types"
            android:id="@+id/manyview"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_main"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="multiple item selection"
            android:id="@+id/multiple"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_main"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="swipe item"
            android:id="@+id/swipe"
            android:textColor="#A6014650"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_main"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>