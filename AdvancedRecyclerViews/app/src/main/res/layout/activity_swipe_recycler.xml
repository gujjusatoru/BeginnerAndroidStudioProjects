<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#050505"
    tools:context=".recyclerswipe.SwipeRecycler">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swipe View Recycler"
        android:id="@+id/headswipe"
        android:textColor="#01B378"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headswipe"

        android:layout_marginBottom="53dp"
        android:id="@+id/recycle6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignBottom="@id/recycle6"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:weightSum="2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="22sp"
            android:text="BACK"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:id="@+id/swipeback"
            android:background="#01b378"
            android:layout_marginEnd="1dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Show Liked"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/white"
            android:background="#01b378"
            android:layout_weight="1"
            android:id="@+id/swipeshow"
            />
    </LinearLayout>


</RelativeLayout>